<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:clipToPadding="false"
    android:paddingBottom="10dp">

    <ImageView
        android:id="@+id/iv_contact_photo"
        android:layout_width="200dp"
        android:layout_height="200dp"/>

    <TextView
        android:id="@+id/tv_contact_display_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="30sp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:elevation="8dp"
        android:padding="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/ib_contact_dial_number"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="@drawable/ic_call_color_primary_24dp"/>

            <TextView
                android:id="@+id/tv_contact_number"
                android:layout_width="200dp"
                android:layout_height="30dp"/>

            <ImageButton
                android:id="@+id/ib_contact_send_message"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="@drawable/ic_chat_color_primary_24dp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/ib_contact_send_email"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="@drawable/ic_email_color_primary_24dp"/>

            <TextView
                android:id="@+id/tv_contact_email"
                android:layout_width="200dp"
                android:layout_height="30dp"/>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>